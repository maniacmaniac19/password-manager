<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand text1" href="/">
      <h1><i class="fas fa-chess-rook"></i>Strongroom</h1>
    </a>
    
    <i class="far fa-plus-square" data-toggle="modal" id="triggerModal" data-target="#addModal"></i>
