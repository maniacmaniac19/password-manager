  {{{ body }}}
  {{!-- <footer class="bg-primary">
      <h1>Defend Yourself<br><i class="fas fa-shield-alt"></i></h1>
  </footer> --}}
  <div class="modal animated bounceInDown" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addModalLabel">Add new entry</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form class="inputForm">

            <div class="form-group ">
            <label class="col-form-label col-form-label-sm" for="inputSmall">Name:</label><br>
            <input type="text" id="entryName" class="form-control form-control-sm" name="Name" placeholder="Name">
            <p id="p1" class="invalid-feedback text-danger"></p>
            </div>

            <div class="form-group">
            <label class="col-form-label col-form-label-sm" for="inputSmall">URL:</label>           
            <input type="url" id="entryLink" data-toggle="tooltip" data-placement="top" title="" data-original-title="Tooltip on top" class="form-control form-control-sm" name="Link" value="http://">
            <p id="p2" class="invalid-feedback text-danger"></p>
            </div>

            <div class="form-group">
            <label class="col-form-label col-form-label-sm" for="inputSmall">Username:</label><br>
            <input type="text" id="entryUsername"  class="form-control form-control-sm" name="Username" placeholder="Username">
            <p id="p3" class="invalid-feedback text-danger"></p>
            </div>

            <div class="form-group pwdToggle">
              <label class="col-form-label col-form-label-sm" for="inputSmall">Password</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="far fa-eye showPwd"></i></span>
                  <input class="form-control form-control-sm pwd" id="entryPassword" placeholder="Password" type="password">
                </div>
                <p id="p4" class="invalid-feedback text-danger"></p>
              </div>
            </div>
            <form-group>             
            <input type="button" value="Generate" class="btn btn-primary btn-sm" id="generate">
            </form-group> 
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <a 
          {{!-- href="/secret" --}}
          ><button type="button" id="addVault" class="btn btn-primary">Save changes</button></a>
        </div>
      </div>
    </div>
  </div>
 


  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/clipboard@2/dist/clipboard.min.js"></script>
  <script src="/assets/js/app.js"></script>
</body>

</html>