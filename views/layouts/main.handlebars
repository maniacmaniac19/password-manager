<div class="modal" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addModalLabel">Add new entry</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form class="inputForm">
                  <p>Name:</p>
                    <input type="text" id="entryName" name="Name" placeholder="Name">
                    <p>URL:</p>
                    <input type="url" id="entryLink" name="Link" placeholder="URL">
                    <p>Username:</p>
                    <input type="text" id="entryUsername" name="Username" placeholder="Username">
                    <div class="form-group pwdToggle">
                            <label class="col-form-label col-form-label-sm" for="inputSmall">Password</label>
                            <input class="form-control form-control-sm pwd" id="entryPassword" type="password" >
                            <input type="button" class="btn btn-primary btn-sm showPwd" value="Show"><br>
                        </div>
                    <input type="button" value="Generate"class="btn btn-primary btn-sm" id="generate">
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <a href="/api/secret"></a><button type="button" id="addVault" class="btn btn-primary" data-dismiss="modal">Save changes</button></a>
            </div>
          </div>
        </div>
      </div>


